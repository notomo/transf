{
  "name": "transf",
  "version": "0.0.1",
  "description": "A browser extension for page transformation (rotation, scaling, translation)",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "start": "wxt",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "zip": "wxt zip",
    "postinstall": "wxt prepare",
    "typecheck": "tsc --noEmit",
    "format": "biome check --write --formatter-enabled=true --assist-enabled=true --unsafe",
    "check": "biome check .",
    "test": "vitest run",
    "test:e2e:ci": "playwright test",
    "test:e2e:dev": "npm run build:dev && npm run test:e2e:ci",
    "test:e2e:ui": "playwright test --ui",
    "screenshot": "npm run build:dev && SCREENSHOT=true playwright test e2e/screenshot.spec.ts",
    "ls-lint": "ls-lint",
    "check_all": "npm run format && npm run check && npm run typecheck && npm run ls-lint && npm run test && npm run test:e2e:dev",
    "setup:e2e-mcp": "playwright init-agents --loop=claude",
    "deploy_for_local": "npm run build && mkdir -p $TRANSF_LOCAL && cp -rf ./.output/chrome-mv3/* $TRANSF_LOCAL"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@ls-lint/ls-lint": "^2.3.1",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "lefthook": "^2.0.16",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wxt": "0.20.14"
  },
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "valibot": "^1.2.0"
  }
}
